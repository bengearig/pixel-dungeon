{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["ESNext", "dom"],
        "paths": {
            "src/*": ["src/*"]
        },
        "rootDir": "./src",
        "baseUrl": "./",
        "outDir": "./dist",
        "module": "ES2015",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["src/**/*"]
}
